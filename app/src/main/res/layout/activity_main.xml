<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        style="@style/AppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@mipmap/logo"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/enterAmount"
        style="@style/enterAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="@string/enterAmount"
        android:background="@drawable/shape"
        android:hint="@string/enterAmount"
        android:digits="0123456789."/>

    <TextView
        android:id="@+id/textView_percent"
        style="@style/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="37dp"
        />

    <SeekBar
        android:id="@+id/seekBar_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="0"
        android:progress="1"
        android:thumb="@drawable/for_seek_bar"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-20dp"/>

    <TextView
        android:id="@+id/tip_word"
        style="@style/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="20dp"
        style="@style/enterAmount"/>

    <TextView
        android:id="@+id/total_word"
        style="@style/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape"
        style="@style/enterAmount"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="370dp"
        android:layout_height="140dp"
        android:background="@drawable/shape"
        android:autofillHints="@string/result"
        android:hint="@string/result"
        style="@style/result"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        style="@style/vardasPavarde"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp" />

</LinearLayout>